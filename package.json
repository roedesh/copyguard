{
  "name": "copyguard",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:firefox": "TARGET=firefox vite build",
    "start:firefox": "web-ext run --source-dir ./dist/",
    "export": "bun run build && web-ext build --source-dir ./dist/ --overwrite-dest",
    "export:firefox": "bun run build:firefox && web-ext build --source-dir ./dist/ --overwrite-dest",
    "icons": "cd build-tools && bun create-icons.ts",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write .",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.1",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@tsconfig/svelte": "^5.0.0",
    "@types/imagemagick": "^0.0.35",
    "@types/jest": "^29.5.12",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-svelte": "^2.35.1",
    "imagemagick": "^0.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-location-mock": "^2.0.0",
    "jest-webextension-mock": "^3.8.9",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.1",
    "sass": "^1.71.0",
    "svelte": "^5.0.5",
    "svelte-check": "^4.0.0",
    "ts-jest": "^29.1.2",
    "tslib": "^2.5.0",
    "typescript": "^5.3.2",
    "vite": "^6.0.11",
    "vite-plugin-web-extension": "^4.0.0",
    "web-ext": "^8.0.0",
    "webextension-polyfill": "^0.12.0",
    "zip-a-folder": "^3.1.6"
  },
  "dependencies": {
    "@felte/validator-yup": "^1.1.3",
    "@sveltestrap/sveltestrap": "^6.2.5",
    "bootstrap": "^5.3.2",
    "felte": "^1.2.14",
    "svelte-forms": "^2.3.1",
    "svelte-forms-lib": "^2.0.1",
    "svelte-spa-router": "^4.0.1",
    "yup": "^1.3.3"
  }
}
